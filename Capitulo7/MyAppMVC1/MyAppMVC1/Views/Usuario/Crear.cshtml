@model MyAppMVC1.Models.Usuario
@{
    ViewData["Title"] = "Registro de usuario";
}

<h2>Registro de usuario</h2>

<div asp-validation-summary="All" class="text-danger mb-2"></div>

<form asp-action="Crear" method="post">
    <div class="form-group mb-2">
        <label asp-for="nombre" class="form-label"></label>
        <input asp-for="nombre" class="form-control" />
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="apellidos" class="form-label"></label>
        <input asp-for="apellidos" class="form-control" />
        <span asp-validation-for="apellidos" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="email" class="form-label"></label>
        <input asp-for="email" type="email" class="form-control" />
        <span asp-validation-for="email" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="contrasenna" class="form-label"></label>
        <input asp-for="contrasenna" type="password" class="form-control" />
        <span asp-validation-for="contrasenna" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Registrar Usuario</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
