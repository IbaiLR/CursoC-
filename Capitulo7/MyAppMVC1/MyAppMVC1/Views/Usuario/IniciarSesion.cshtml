@model MyAppMVC1.Models.Usuario;
@{
    ViewData["Title"] = "Inicio de sesión";
}
<h2> Iniciar sesión</h2>

<form asp-action="IniciarSesion" method="post">
    <div class="form-group mb-2">
        <label asp-for="email" class="form-label"></label>
        <input asp-for="email" class="form-control" />
        <span asp-validation-for="email" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="contrasenna" class="form-label"></label>
        <input asp-for="contrasenna" type="password" class="form-control" />
        <span asp-validation-for="contrasenna" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Iniciar sesion</button>
    <a asp-controller="Home" asp-action="index" class="btn btn-primary mt-3"> Volver al inicio</a>
</form>